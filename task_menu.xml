<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/task_popup_box"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/backBox"
        android:layout_alignTop="@+id/backBox"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/back_icon" />

    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/backBox"
        android:layout_alignTop="@+id/backBox"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/edit_icon" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:text="Jogging" />

    <ImageView
        android:id="@+id/divideLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/line_divider"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="35dp"
        android:scaleType="centerInside"
        android:src="@drawable/bigger_circle"/>

    <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginStart="140dp"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="30 Minute Duration" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="35dp"
        android:scaleType="centerInside"
        android:src="@drawable/bigger_circle"/>

    <TextView
        android:id="@+id/info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_marginStart="140dp"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="Daily Task" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="240dp"
        android:layout_marginStart="35dp"
        android:scaleType="centerInside"
        android:src="@drawable/bigger_circle"/>

    <TextView
        android:id="@+id/info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:layout_marginStart="140dp"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="Moderate Difficulty" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="35dp"
        android:scaleType="centerInside"
        android:src="@drawable/bigger_circle"/>

    <TextView
        android:id="@+id/info4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:layout_marginStart="140dp"
        android:ems="10"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="Reminder at 2:30 P.M." />

    <ImageButton
        android:id="@+id/startTask"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/start_task_button"/>


</RelativeLayout>